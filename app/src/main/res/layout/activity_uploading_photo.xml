<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AE898B3"
    android:backgroundTint="#7AE898B3"
    tools:context=".UploadingPhoto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image of your Book here: "
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/UploadedImage"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_baseline_image_search_24" />

        <Button
            android:id="@+id/SelectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_design"
            android:foreground="@drawable/btn_design"
            android:text="Select Image" />

        <Button
            android:id="@+id/btnMoveToProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/btn_design"
            android:foreground="@drawable/btn_design"
            android:text="View Page Profile" />

    </LinearLayout>

</RelativeLayout>